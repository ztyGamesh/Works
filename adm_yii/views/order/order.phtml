            ListPageConfig.action = {
                detail: false,
                edit: false,
                del: false
            };
            toFirstLegalPage();
        } else if (auth == 1) {
            ListPageConfig.action = {
                detail: true,
                edit: false,
                del: false
            };
        } else if (auth == 2) {
            ListPageConfig.action = {
                detail: true,
                edit: true,
                del: false
            };
        }
    }
    checkAuthority();

